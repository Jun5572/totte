<div class="main-box">
  <div class="devise-main-box">
    <div class="devise-contents-box">
    <h2></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    <div class="username-box">
      <div class="field">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "姓", class: "devise-form-control devise-form-style" %>
      </div>
      <div class="field">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "名", class: "devise-form-control devise-form-style", style: "margin-left: 5px;" %>
      </div>
    </div>
      <div class="birth-box">
        <div class="field">
          <%= f.select :birth_year, (1960..2020), class: "select-form" %>
          年
        </div>

        <div class="field">
          <%= f.select :birth_month, (1..12), class: "" %>
          月
        </div>
          <div class="field">
          <%= f.select :birth_day, (1..31), class: "" %>
          日
        </div>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-form-control devise-form-style", placeholder: "e-mail" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em><%#= @minimum_password_length %></em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "devise-form-control devise-form-style", placeholder: "パスワード(" + @minimum_password_length.to_s + "ケタ以上)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "devise-form-control devise-form-style", placeholder: "パスワード確認" %>
      </div>

      <div class="actions">
        <%#= f.submit "始める", class: "devise-sign-up-button" %>
        <button type="submit" class="ui inverted primary button">はじめる</button>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
