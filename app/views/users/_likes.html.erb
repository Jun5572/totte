<% if photo.liked_by?(current_user) %>
	<%= link_to photo_likes_path(photo.id), style: "color:rgba(255, 255, 255, 0.8);", id: "like#{photo.id}", method: :delete, remote: true do %>
		<i class="fas fa-heart fa-2x"></i>
	<% end %>
<% else %>
	<%= link_to photo_likes_path(photo.id), class: "create-like-icon", style: "color:rgba(255, 255, 255, 0.8);", id: "like#{photo.id}", method: :post, remote: true do %>
		<i class="far fa-heart fa-2x" ></i>
	<% end %>
<% end %>