<header id="header-fixed" class="">
	<div class="headline-box">
		<div class="headline-icons">
			<div class="">
				<%= link_to photos_path do %>
					<img src="/assets/totte-logo.png" class="brand-logo">
				<% end %>
			</div>
		</div>
		<div class="ui icon top right pointing dropdown">
			<%= attachment_image_tag current_user, :thumbnail,:fill,fallback: 'user_preset_image.png', :size => "40x40", class: "headline-user-icon" %>
			<div class="menu" style="box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);">
				<div class="header" style="display: flex; flex-direction: row;">
					<%= attachment_image_tag user, :thumbnail,:fill,fallback: 'user_preset_image.png', :size => "40x40", class: "headline-user-icon" %>
					<div style="padding-top: 25px;font-size: 15px;margin-left:10px;">ニックネーム</div>
				</div>
				<div class="item">ユーザータイプ</div>
				<div class="ui divider"></div>
				<div class="header"><h4>Settings</h4></div>
				<div class="header">
					<%= link_to edit_user_path(current_user), class: "ui inverted purple button" do %>
						Edit your plofile
					<% end %>
				</div>
				<div class="header">
					<%= link_to edit_user_path(current_user), class: "ui inverted secondary right floated button" do %>
						Log out
					<% end %>
				</div>
			</div>
		</div>
	</div>
</header><!-- /header -->