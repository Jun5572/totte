  type="text/javascript"></script> -->
<script>

  $('.ui.dropdown')
  .dropdown();


  $('#modal-confirm').click(function(){
    $('.ui.basic.modal')
    .modal('show');
  });

  $('#test')
  .transition('bounce');


</script>

