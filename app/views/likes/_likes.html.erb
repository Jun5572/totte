<% if photo.like_user(current_user) %>
	<%= link_to photo_likes_path(photo.id), style: "color:rgba(255, 255, 255, 0.8);", id: "like_#{photo.id}", method: :delete, remote: true do %>
		<font color="white" size="3"><%= photo.likes.count if photo.likes.count > 0%></font>
		<i class="fas fa-thumbs-up fa-2x"></i>
	<% end %>
<% else %>
	<%= link_to photo_likes_path(photo.id), class: "create-like-icon", style: "color:rgba(255, 255, 255, 0.8);", id: "like_#{photo.id}", method: :post, remote: true do %>
		<font color="white" size="3"><%= photo.likes.count if photo.likes.count > 0 %></font>
		<i class="far fa-thumbs-up fa-2x"></i>
	<% end %>
<% end %>