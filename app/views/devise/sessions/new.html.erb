<div class="main-box">
  <div class="devise-main-box">
    <div class="devise-contents-box">
      <p align="center"><font size="6"><b>Login</b></font></p>
      <div class="registration-input-box" style="">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        <div class="nickname-box">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-form-control devise-form-style" %>
          <%#= f.label :nickname, "ニックネーム" %>
          <%#= f.text_field :nickname, autofocus: true, :placeholder => "ニックネーム", class: "devise-form-control devise-form-style" %>

        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", class: "devise-form-control devise-form-style", placeholder: "パスワード(" + @minimum_password_length.to_s + "６ケタ以上)" %>
        </div>
        <div class="field">
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
        <div class="actions">
          <button type="submit" class="ui blue right floated button">ログイン</button>
        </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>































